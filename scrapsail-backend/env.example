# ScrapSail Backend Environment Variables
# Copy this file to .env and update the values

# Server Configuration
PORT=8080
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/scrapsail

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Email Configuration (Gmail only for OTP)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Gmail Setup Instructions:
# 1. Enable 2-Factor Authentication on your Gmail account
# 2. Go to Google Account settings > Security > App passwords
# 3. Generate a new app password for "Mail"
# 4. Use that password as EMAIL_PASS (not your regular Gmail password)
# 5. EMAIL_USER must be a Gmail address (@gmail.com)

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Carbon Credit Configuration
CARBON_CREDIT_RATE=1
REDEMPTION_RATE=1
